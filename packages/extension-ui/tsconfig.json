{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2015",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "lib",
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "lib-esm"
  ]
}
