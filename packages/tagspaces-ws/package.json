{
  "name": "@tagspaces/tagspaces-ws",
  "description": "Web Service for creating thumbnails and index used by the TagSpaces application",
  "version": "5.0.0",
  "author": "TagSpaces Authors <contact@tagspaces.org>",
  "license": "MIT",
  "main": "./build/index.js",
  "type": "module",
  "types": "./build/index.d.ts",
  "files": [
    "build/",
    "package.json",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./build/index.js",
      "node": "./build/index.js",
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "vite-node ./src/index.ts -p 49352",
    "start-dev": "vite-node ./src/index.ts -p 2000 -k e2eTestKey",
    "start:build": "node ./build/index.js",
    "prebuild": "rimraf ./build ./tsconfig.tsbuildinfo",
    "build": "tsc --build tsconfig.json --force",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint --ext .js --ext .ts --report-unused-disable-directives .",
    "format": "npm run lint:eslint -- --fix",
    "clean": "rm -rf ./node_modules ./build ./tsconfig.tsbuildinfo",
    "install-node-linux": "npm install --arch=x64 --platform=linux sharp",
    "install-node-mac": "npm install --arch=x64 --platform=darwin sharp",
    "install-node-win": "npm install --arch=x64 --platform=win32 sharp",
    "kill-process": "lsof -n -i4TCP:49352 | awk '{print$2}' | tail -1 | xargs kill -9",
    "test-data-download": "npx rimraf testdata && git clone --depth 1 https://github.com/tagspaces/testdata",
    "test": "npm run test-data-download && jest",
    "test-only": "jest",
    "npmpack": "npm run build && npx shx cp -rL build/** ../../../tagspaces3/release/app/node_modules/@tagspaces/tagspaces-ws/",
    "pkg-publish": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "@tagspaces/tagspaces-common": "^5.0.0",
    "@tagspaces/tagspaces-common-node": "^5.0.0",
    "@tagspaces/tagspaces-indexer": "^5.0.0",
    "@tagspaces/tagspaces-workers": "^5.0.0",
    "find-free-ports": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite-node": "^2.1.3"
  },
  "peerDependencies": {
    "sharp": ">=0.32.0"
  }
}
